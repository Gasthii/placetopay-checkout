# Credenciales de ambiente de pruebas (reemplaza con las tuyas si cambia el sitio)
PLACETOPAY_LOGIN=your_login_here
PLACETOPAY_SECRET_KEY=your_secret_key_here

# Endpoint base; para staging/pruebas usar el sandbox documentado
PLACETOPAY_BASE_URL=https://checkout-test.placetopay.com

# URL pública de tu app para return/cancel (ej. Next.js dev server)
PUBLIC_BASE_URL=http://localhost:3000

# Offset manual en minutos si tu server no está en UTC (usualmente 0)
PLACETOPAY_TIME_OFFSET_MINUTES=0

# Habilita salida de auth generada (solo para debug local)
PLACETOPAY_DEBUG_AUTH=true
